# =============================================================================
# Authentication OpenStack
# =============================================================================

auth_url    = "https://your-openstack.com:5000/v3"
region      = "RegionOne"
tenant_name = "mon-projet"
user_name   = "mon-utilisateur"
password    = "mon-mot-de-passe"

# =============================================================================
# External Network
# =============================================================================

external_network = "external-network"

# =============================================================================
# Network Public
# =============================================================================

public_network_name = "network-public"
public_subnet_name  = "public-subnet1"
public_subnet_cidr  = "10.0.1.0/24"

# =============================================================================
# Network Private
# =============================================================================

private_network_name = "network-private"
private_subnet_name  = "private-subnet2"
private_subnet_cidr  = "10.0.2.0/24"

# =============================================================================
# Router
# =============================================================================

router_name = "routeur"

# =============================================================================
# VM1 - Nginx (Ubuntu 18.04)
# cpu: 2, ram: 2048, disk: 20GO
# =============================================================================

vm1_name   = "vm-nginx"
vm1_image  = "Ubuntu 18.04"
vm1_flavor = "m1.small"    # Adaptez selon votre cloud (2 vCPU, 2GB RAM)

# =============================================================================
# VM2 - Ubuntu 22.04
# cpu: 2, ram: 2048, disk: 20GO
# =============================================================================

vm2_name   = "vm-private"
vm2_image  = "Ubuntu 22.04"
vm2_flavor = "m1.small"    # Adaptez selon votre cloud (2 vCPU, 2GB RAM)

# =============================================================================
# SSH (contenu de ~/.ssh/id_rsa.pub)
# =============================================================================

ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQ... user@host"

# =============================================================================
# DNS
# =============================================================================

dns_servers = ["8.8.8.8", "8.8.4.4"]
